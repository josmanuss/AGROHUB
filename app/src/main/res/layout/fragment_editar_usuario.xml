<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2E7D32"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:contentDescription="Logo"
            android:src="@drawable/logo_contraste" />

        <!-- Espaciador -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Icono de menú (3 barras) -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:contentDescription="Menú"
            android:src="@drawable/ic_menu"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="8dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_epu"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Imagen circular -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <!-- Botón de seleccionar archivo -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:backgroundTint="#2E7D32"
            android:text="@string/ep_btn_sele"
            android:textColor="#FFFFFF" />

        <!-- Campos de texto y botones adicionales -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/epu_nameuser"
            android:textSize="18sp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/insertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:hint="Ingrese el nombre del usuario" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/epu_dir"
            android:textSize="18sp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/insertDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:hint="Ingrese la dirección" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/epu_pre"
            android:textSize="18sp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/insertNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="numberDecimal"
            android:hint="Ingrese el número de contacto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ep_can"
            android:textSize="18sp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/insertCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:hint="Ingrese la cantidad" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/epu_cont"
            android:textSize="18sp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/InsertNewContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:gravity="top"
            android:inputType="textPassword"
            android:hint="Ingrese la nueva contraseña" />

        <Button
            android:id="@+id/btnActualizarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            android:drawableEnd="@drawable/baseline_save_24"
            android:text="@string/epu_btn_a"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCancelActulizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#403F3F"
            android:drawableEnd="@drawable/baseline_cancel_24"
            android:text="@string/epu_btn_c"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>
